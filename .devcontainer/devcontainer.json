{
  "name": "Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "google.gemini-cli-vscode-ide-companion",
        "anthropic.claude-code",
        "anysphere.cursorpyright",
        "ms-python.black-formatter",
        "formulahendry.code-runner",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "formulahendry.auto-close-tag",
        "christian-kohler.path-intellisense",
        "yzhang.markdown-all-in-one",
        "MermaidChart.vscode-mermaid-chart",
        "PKief.material-icon-theme"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "zsh",
            "icon": "terminal-ubuntu"
          }
        }
      }
    }
  },
  "features": {},
  "remoteUser": "devcontainer",
  "mounts": [
    // gemini settings
    "source=${localEnv:HOME}/.gemini,target=/home/devcontainer/.gemini,type=bind,consistency=cached",
    // claude settings
    "source=${localEnv:HOME}/.claude,target=/home/devcontainer/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/home/devcontainer/.claude.json,type=bind,consistency=cached",
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    // tmux settings
    "source=${localEnv:HOME}/.tmux.conf,target=/home/devcontainer/.tmux.conf,type=bind,consistency=cached",
    // zsh settings
    "source=${localWorkspaceFolder}/.devcontainer/.zshrc,target=/home/devcontainer/.zshrc,type=bind,consistency=cached"
  ],
  "postCreateCommand": "",
  "waitFor": "postStartCommand"
}
