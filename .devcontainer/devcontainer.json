{
  "name": "Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:Asia/Tokyo}",
      "NODE_VERSION": "24.13.0",
      "UV_VERSION": "0.9.28",
      "GEMINI_CLI_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.1"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "google.gemini-cli-vscode-ide-companion",
        "anthropic.claude-code",
        "anysphere.cursorpyright",
        "ms-python.black-formatter",
        "formulahendry.code-runner",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "formulahendry.auto-close-tag",
        "christian-kohler.path-intellisense",
        "yzhang.markdown-all-in-one",
        "MermaidChart.vscode-mermaid-chart",
        "PKief.material-icon-theme"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "zsh",
            "icon": "terminal-ubuntu"
          }
        }
      }
    }
  },
  "remoteUser": "devcontainer",
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/devcontainer/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=delegated",

  "mounts": [
    // zsh history (volume mount for persistence across container rebuilds)
    "source=devcontainer-zsh-history-${devcontainerId},target=/commandhistory,type=volume",
    // zsh settings
    "source=${localWorkspaceFolder}/.devcontainer/.zshrc,target=/home/devcontainer/.zshrc,type=bind,consistency=cached",
    // git settings
    "source=${localWorkspaceFolder}/.devcontainer/.gitconfig,target=/home/devcontainer/.gitconfig,type=bind,consistency=cached",
    // claude settings (bind mount from host home directory)
    "source=${localEnv:HOME}/.claude,target=/home/devcontainer/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/home/devcontainer/.claude.json,type=bind,consistency=cached",
    // gemini settings (bind mount from host home directory)
    "source=${localEnv:HOME}/.gemini,target=/home/devcontainer/.gemini,type=bind,consistency=cached"
  ]
}
